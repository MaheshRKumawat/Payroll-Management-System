<%- include("../partials/header") %>
    <div class = "container">
        <% if(data){ %>
            <% data.forEach(employee=>{ %>
                <div class="card" style="width: 18rem; display: inline-block;">
                    <div class="card-body">
                        <h5 class="card-title">Employee ID: <%=employee['emp_id']%></h5>
                        <p class="card-text">Name: <%=employee['first_name'] +" "+ employee['middle_name'] +" "+employee['last_name']%></p>
                        
                        <a href="/employees/<%=employee['emp_id']%>" type="button" class="btn btn-outline-primary">View Details</a>
                    </div>
                </div>
            <%});%>
        <%}else{%>
            <h1>No Employees</h1>
        <%}%>
    </div>
<%- include("../partials/footer") %>