<%- include("../partials/header") %>
    <div class = "container">
        <% if(data){ %>
            <% data.forEach(project=>{ %>
                <div class="card" style="width: 30rem; height: 15rem; display: inline-block;">
                    <div class="card-body">
                        <h4 class="card-title">Project ID: <%=project['p_id']%></h4>
                        <br>
                        <h5 class="card-text">Project Name: <%=project['p_name']%></h5>
                        <br>
                        <a href="/projects/<%=project['p_id']%>" type="button" class="btn btn-outline-primary">View Details</a>
                    </div>
                </div>
            <%});%>
        <%}else{%>
            <h1>No projects</h1>
        <%}%>
    </div>
<%- include("../partials/footer") %>