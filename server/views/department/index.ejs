<%- include("../partials/header") %>
    <div class = "container">
        <% if(data){ %>
            <% data.forEach(department=>{ %>
                <div class="card" style="width: 30rem; height: 15rem; display: inline-block;">
                    <div class="card-body">
                        <h4 class="card-title">Department ID: <%=department['dept_id']%></h4>
                        <br>
                        <h5 class="card-text">Department Name: <%=department['dept_name']%></h5>
                        <br>
                        <a href="/departments/<%=department['dept_id']%>" type="button" class="btn btn-outline-primary">View Details</a>
                    </div>
                </div>
            <%});%>
        <%}else{%>
            <h1>No Departments</h1>
        <%}%>
    </div>
<%- include("../partials/footer") %>